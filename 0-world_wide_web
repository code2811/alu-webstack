#!/usr/bin/env bash
# Display information about domain and subdomains

# Function to get domain information
get_domain_info() {
    local domain="$1"
    local subdomain="$2"
    
    # Get DNS information using dig and format with awk
    dig_result=$(dig "$subdomain.$domain" | awk '/ANSWER SECTION:/ {getline; print}')
    
    record_type=$(echo "$dig_result" | awk '{print $4}')
    destination=$(echo "$dig_result" | awk '{print $5}')
    
    echo "The subdomain $subdomain is a $record_type record and points to $destination"
}

# Main
domain="$1"
subdomain="$2"

if [ -z "$subdomain" ]; then
    # Display information for default subdomains
    get_domain_info "$domain" "www"
    get_domain_info "$domain" "lb-01"
    get_domain_info "$domain" "web-01"
    get_domain_info "$domain" "web-02"
else
    # Display information for the specified subdomain
    get_domain_info "$domain" "$subdomain"
fi
